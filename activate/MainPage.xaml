                                </StackPanel>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Path=condition}" FontFamily="Segoe WP Light" FontSize="24" Foreground="#545d61"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
